
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      // Controllo semplice per email admin (puoi sostituire con custom claims)
      return request.auth.token.email == "mrpinkukulele@gmail.com";
    }

    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /orders/{orderId} {
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.userId);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid
        // blocca ordini quando quantita <= 0 leggendo il prodotto
        && get(/databases/$(database)/documents/products/$(request.resource.data.productId)).data.quantita > 0;
      // L'utente non pu√≤ aggiornare/cancellare ordini; solo admin
      allow update, delete: if isAdmin();
    }
  }
}
